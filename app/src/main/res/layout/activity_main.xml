<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="@dimen/common_margin"
        android:contentDescription="TODO"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/barrier"
        app:srcCompat="@drawable/netology_icon_foreground" />

    <TextView
        android:id="@+id/author"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="@sample/posts.json/data/author"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintEnd_toStartOf="@id/menu"
        android:layout_marginHorizontal="@dimen/common_margin"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintBottom_toTopOf="@id/published"/>

    <TextView
        android:id="@+id/published"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@sample/posts.json/data/published"
        android:layout_marginHorizontal="@dimen/common_margin"
        app:layout_constraintStart_toEndOf="@id/avatar"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintBottom_toBottomOf="@id/avatar"/>

    <ImageView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_more_vert_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="avatar, published, menu" />

    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/common_margin"
        app:layout_constraintTop_toBottomOf="@id/barrier"
        tools:text="@sample/posts.json/data/content"

        />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/barrier2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="content" />

    <ImageView
        android:id="@+id/ic_likes"
        android:layout_width="22dp"
        android:layout_height="24dp"
        android:layout_margin="@dimen/common_margin"
        app:layout_constraintBottom_toBottomOf="@id/ic_share"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/barrier2"
        app:srcCompat="@drawable/ic_favorite_24" />

    <TextView
        android:id="@+id/likes_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_likes"
        app:layout_constraintStart_toEndOf="@id/ic_likes"
        app:layout_constraintTop_toTopOf="@id/ic_likes"
        android:text="10"

        />

    <ImageView
        android:id="@+id/ic_share"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@drawable/ic_share_24"
        android:layout_margin="@dimen/common_margin"
        app:layout_constraintBottom_toBottomOf="@id/likes_count"
        app:layout_constraintStart_toEndOf="@id/likes_count"
        app:layout_constraintTop_toTopOf="@id/ic_likes"
        />

    <TextView
        android:id="@+id/share_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="5"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@id/ic_share"
        app:layout_constraintStart_toEndOf="@id/ic_share"
        app:layout_constraintTop_toTopOf="@id/ic_share" />

    <ImageView
        android:id="@+id/ic_view"
        android:layout_width="24dp"
        android:layout_height="24dp"
        app:srcCompat="@android:drawable/ic_menu_view"
        app:layout_constraintBottom_toBottomOf="@id/ic_share"
        app:layout_constraintEnd_toStartOf="@id/view_count"
        app:layout_constraintTop_toTopOf="@id/ic_share" />

    <TextView
        android:id="@+id/view_count"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@id/ic_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/ic_view" />

</androidx.constraintlayout.widget.ConstraintLayout>